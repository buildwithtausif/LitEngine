# ==============================================
# Database Configuration
# ==============================================

# Database Host
# - For local development: Use 'localhost'
# - For cloud (Supabase, AWS, etc.): Use the provided endpoint URL
PSQL_HOST=localhost

# Database Port
# - Default: 5432
# - Connection Poolers: Use 6543 (Required for Supabase Transaction Mode)
PSQL_PORT=5432

# Database Username
PSQL_USER=postgres

# Database Password
PSQL_PASS=password

# Database Name
# - 'library' : (Recommended) Use this if you have created a dedicated database for the app.
# - 'postgres': (Default) Use this if you are connecting to the default system database.
PSQL_DB=library

# ==============================================
# Server Configuration
# ==============================================

# The port where this Node.js server will act
PORT=8000

# Configuration for API Base URL
# - Production: https://your-domain.com/api
# - Local Example: http://localhost:8000/api
VITE_API_BASE_URL=https://your-api-url.com/api
